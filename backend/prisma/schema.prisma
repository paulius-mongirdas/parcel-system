generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  CREATED
  IN_DELIVERY
  DELIVERED
  CANCELED
  NOT_DELIVERED
}

model Transport {
  id        Int      @id @default(autoincrement())

  type      String
  capacity     Int     @default(0)
  averageSpeed  Int   @default(0)

  center   Center? @relation(fields: [centerId], references: [id])
  centerId  Int?

  @@map("transports")
}

model Center {
  id        Int      @id @default(autoincrement())

  capacity     Int     @default(0)
  address      String
  city         String
  country      String

  transports   Transport[]

  @@map("centers")
}

model Package {
  id        Int      @id @default(autoincrement())

  address   String
  city      String
  country   String
  postalCode  String

  length    Int
  width     Int
  height    Int
  weight    Int

  status    Status  @default(CREATED)
  createdAt DateTime @default(now())
  deliveredAt  DateTime

  price   Float

  @@map("packages")
}